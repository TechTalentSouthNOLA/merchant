<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="2">Product</th>
      <th>Current price</th>
      <th>Quantity</th>
      <th>Brand</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.avatar.url(:thumb) %></td>
        <td><%= product.name %></td>
        <td><%= number_to_currency product.current_price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.brand.try(:name) %></td>
        <td><%= product.category.try(:name) %></td>
        <td><%= link_to 'Show', admin_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

